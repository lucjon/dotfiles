alignment top_left
background no
border_width 1
cpu_avg_samples 4
default_color white
default_outline_color white
default_shade_color white
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont Workplace Sans:size=11:antialias=false
gap_x 20
gap_y 60
minimum_size 250 5
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class Conky
own_window_type override
own_window_transparent yes
double_buffer yes
